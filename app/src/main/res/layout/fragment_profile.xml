<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.common.ProfileFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"

        android:text="My Profile"
        android:textAppearance="@style/largeText" />

    <TextView
        android:id="@+id/textPersInfo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="110dp"

        android:text="Personal Information"
        android:textAppearance="@style/mediumText"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="150dp"
        android:text="Name"
        android:textAppearance="@style/mediumText"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="175dp"

        android:text="Text"
        android:textAppearance="@style/mediumText"
        android:textSize="50px" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="210dp"

        android:text="Cellphone"
        android:textAppearance="@style/mediumText"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="235dp"

        android:text="Text"
        android:textAppearance="@style/mediumText"
        android:textSize="50px" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="270dp"

        android:text="Account type"
        android:textAppearance="@style/mediumText"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userAccountTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="295dp"

        android:text="Text"
        android:textAppearance="@style/mediumText"
        android:textSize="50px" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAmbBtn"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="575dp"
        android:visibility="invisible"
        android:background="@color/blue_200"
        android:text="Add Ambulance"
        android:textAppearance="@style/buttonText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logOutBtn"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"

        android:background="@color/blue_200"
        android:text="Log out"
        android:textAppearance="@style/buttonText" />


</RelativeLayout>