<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.user.CallAmbulance">


    <!-- CallAmbulance text-->
    <TextView
        android:id="@+id/textCallAmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"

        android:gravity="top"
        android:text="Requesting"
        android:textAppearance="@style/largeText" />

    <!-- Location text-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="90dp"
        android:text="Please wait while a driver accepts your request."

        android:textAppearance="@style/mediumText" />


    <!-- Ambulance type -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:text="Searching..."
        android:textAppearance="@style/largeText" />

    <!--Background -->
    <TextView
        android:id="@+id/Background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:background="@drawable/circle" />

    <!-- Cancel -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelFindAmbulance"
        android:layout_width="300dp"
        android:layout_height="48dp"

        android:layout_alignParentTop="true"

        android:layout_centerInParent="true"
        android:layout_marginTop="620dp"
        android:background="@color/blue_200"
        android:text="Cancel request"
        android:textAllCaps="false"
        android:textAppearance="@style/buttonText" />

</RelativeLayout>