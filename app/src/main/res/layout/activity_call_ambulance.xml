<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.user.CallAmbulance">


    <!-- CallAmbulance text-->
    <TextView
        android:id="@+id/textCallAmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="45dp"

        android:gravity="top"
        android:text="Call an ambulance"
        android:textAppearance="@style/largeText" />

    <!-- Location text-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="90dp"
        android:text="Location"

        android:textAppearance="@style/mediumText" />

    <!-- Location text box -->
    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"

        android:background="@drawable/rect"

        android:ems="10"
        android:gravity="start|top"
        android:hint=" Type here"
        android:inputType="textMultiLine"
        android:maxLines="5"

        android:minHeight="100dp"
        android:textAppearance="@style/smallText"
        android:textColorHint="@color/blue_200" />

    <!-- Ambulance type -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="270dp"

        android:text="Ambulance type"
        android:textAppearance="@style/mediumText" />

    <RadioGroup
        android:id="@+id/userCallAmbulanceTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="48dp"
        android:layout_marginTop="285dp">

        <RadioButton
            android:id="@+id/lifeSavingUserSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"

            android:text="Life-Saving"

            android:textColor="@color/blue_200" />

        <RadioButton
            android:id="@+id/basicUserSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="-50dp"


            android:text="Basic"
            android:textColor="@color/blue_200" />
    </RadioGroup>


    <!-- Specialization -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="360dp"
        android:text="Preferred specialization"
        android:textAppearance="@style/mediumText" />

    <!-- Specialization text Box -->
    <EditText
        android:id="@+id/callAmbulanceSpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="385dp"

        android:ems="10"
        android:hint="Specialization"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textAppearance="@style/smallText"
        android:textColorHint="@color/blue_200" />

    <!-- Payment method text -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="455dp"

        android:text="Payment method"
        android:textAppearance="@style/mediumText" />

    <!-- Payment radio button -->
    <RadioGroup
        android:id="@+id/paymentGrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="48dp"
        android:layout_marginTop="470dp">

        <RadioButton
            android:id="@+id/cashPaymentSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="Cash"
            android:textColor="@color/blue_200" />

        <RadioButton
            android:id="@+id/cardPaymentSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="-50dp"

            android:text="Card"
            android:textColor="@color/blue_200" />

    </RadioGroup>

    <!-- Cancel -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelFindAmbulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="55dp"
        android:layout_marginTop="600dp"

        android:background="@color/blue_200"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textAppearance="@style/buttonText" />

    <!-- Request button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findAmbulanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="270dp"
        android:layout_marginTop="600dp"

        android:background="@color/blue_200"
        android:text="Request"
        android:textAllCaps="false"
        android:textAppearance="@style/buttonText"/>

</RelativeLayout>