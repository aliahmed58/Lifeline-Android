<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.user.CallAmbulanceCancel">


    <!-- Cancellation text-->
    <TextView
        android:id="@+id/textCallAmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"

        android:gravity="top"
        android:text="Cancel Booking"
        android:textAppearance="@style/largeText" />

    <!-- Location text-->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="90dp"
        android:text="Please state a reason:"

        android:textAppearance="@style/mediumText" />

    <!-- Reason text Box -->
    <EditText
        android:id="@+id/cancelReason"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="120dp"

        android:background="@drawable/rect"

        android:ems="10"
        android:hint="Enter here"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/blue_200"
        android:textAppearance="@style/smallText"
        android:textColorHint="@color/blue_200" />


    <!-- Cancel button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelBooking"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"

        android:layout_centerInParent="true"
        android:layout_marginTop="620dp"
        android:background="@color/blue_200"
        android:text="Cancel"
        android:textAppearance="@style/buttonText" />

</RelativeLayout>