<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.verification.SignUpActivity2">

    <!-- Lifeline text-->
    <TextView
        android:id="@+id/LifelineSignupPage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"

        android:gravity="top"
        android:text="@string/lifeline"
        android:textAppearance="@style/largeText" />

    <!-- Sign Up text-->
    <TextView
        android:id="@+id/SignupSignupPage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="90dp"

        android:gravity="top"
        android:text="Sign Up"
        android:textAppearance="@style/mediumText" />

    <EditText
        android:id="@+id/otpInput"
        android:layout_width="300dp"
        android:layout_height="41dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"

        android:background="@drawable/rect"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/blue_200"
        android:textColorHint="@color/blue_200" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceedSignUp"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"

        android:background="@color/blue_200"
        android:text="Verify"
        android:textAppearance="@style/buttonText" />
</RelativeLayout>